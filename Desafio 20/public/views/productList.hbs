<h1>Productos: </h1>
{{#if render}}
<table>
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Foto</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>${{this.price}}</td>
            <td><img src="{{this.thumbnail}}" alt=""></td>
            <td><button class="btnDelete" id="{{this._id}}">Eliminar</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
{{/if}}
{{#unless render}}
<h2>No hay productos</h2>
{{/unless}}